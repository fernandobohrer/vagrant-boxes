# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.define "virtualbox" do |virtualbox|
    virtualbox.vm.hostname = "debian-13"
    virtualbox.vm.box = "file://builds/debian-13.box"
    virtualbox.vm.network :private_network, ip: "192.168.56.10"
    config.vm.provider :virtualbox do |v|
      v.gui = false
      v.cpus = 1
      v.memory = 1024
    end
    config.vm.provision "shell", inline: "echo hello from debian-13"
  end
end
